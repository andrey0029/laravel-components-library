{
    "name": "tomsix/laravel-components-library",
    "description": "A collection of pre-made Blade components for Laravel 7.x and up",
    "keywords": [
        "laravel",
        "blade",
        "components",
        "form"
    ],
    "homepage": "https://github.com/tomsix/laravel-blade-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Six",
            "email": "tom@webatvantage.be",
            "homepage": "https://www.webatvantage.be/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^7.0",
        "illuminate/view": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.1",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "TomSix\\Components\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomSix\\Components\\Test\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LibraryServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
