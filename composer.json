{
    "name": "tomsix/laravel-components-library",
    "description": "A collection of pre-made Blade components for Laravel 7.x and up",
    "keywords": [
        "laravel",
        "blade",
        "components",
        "form"
    ],
    "homepage": "https://github.com/tomsix/laravel-blade-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Six",
            "email": "tom@webatvantage.be",
            "homepage": "https://www.webatvantage.be/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0|^8.0",
        "laravel/framework": "^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "TomSix\\Components\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomSix\\Components\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TomSix\\Components\\LibraryServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
